# Verdigris Flavfile
app:
  generates:
    - task: body
    - task: identity
    - task: moiety
    - task: faction
    - task: archetype
    - task: creature
      wants: body, identity, moiety
    - task: rare.creature
      wants: creature, archetype, faction
    - task: duel
      wants: faction, creature:a, creature:b
    - task: creature.set
      wants: faction, creature:3, rare.creature:1
    - name: prowess
      command: ruby furnace.rb all-pairs
